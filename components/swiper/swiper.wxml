<template name="swiper">

    <swiper class="swiper" indicator-dots="{{indicatorDots}}" vertical="{{vertical}}" autoplay="{{autoplay}}"
            duration="{{duration}}" bindchange="{{bindchange}}" circular="{{circular}}"
            style="height:{{imgheights[current]}}rpx;">
        <block wx:for="{{imgUrls}}" wx:key="{{index}}">
            <swiper-item>
                <image src="{{item}}"
                       mode="aspectFit"
                       bindload="{{imageLoad}}"
                       data-current="{{item}}"
                       data-urls="{{imgUrls}}" bindtap="{{viewPic}}"
                       style="height:{{imgheights[current]}}rpx;width:{{imgwidth}}rpx;"/>
            </swiper-item>
        </block>
    </swiper>

