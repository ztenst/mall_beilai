            </view>
        </view>
    </navigator>
    <navigator url="/pages/category/category" class="item">
        <view class="cont">
            <view class="pic">
                <image src="../../images/hov-fenlei.png"></image>
            </view>
            <view class="text on">
                分类
            </view>
        </view>
    </navigator>
    <navigator url="/pages/find/find" class="item">
        <view class="cont">
            <view class="pic">
                <image src="../../images/icon-find.png"></image>
            </view>
            <view class="text">
                发现
            </view>
        </view>
    </navigator>
    <navigator url="/pages/case/case" class="item">
        <view class="cont">
            <view class="pic">
                <image src="../../images/icon-case.png"></image>
